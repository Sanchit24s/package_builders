PORT=<your_port_number>  # Port on which the server runs (e.g., 5000)

BASE_URL=<your_base_url>  # Base URL of your backend API (e.g., http://localhost:5000)

# Database Configuration
MONGODB_URI=<your_mongodb_uri>  # MongoDB connection string (Replace with your database URI)

# JWT Configuration
JWT_SECRET=<your_jwt_secret_key>  # Secret key for JWT authentication (Use a strong, random string)

# Cloudinary Configuration
CLOUD_NAME=<your_cloud_name>  # Cloudinary cloud name
CLOUD_API_KEY=<your_cloud_api_key>  # Cloudinary API key
CLOUD_API_SECRET=<your_cloud_api_secret>  # Cloudinary API secret key

# Email Configuration
EMAIL_USER=<your_email_user>  # Email used for sending notifications (e.g., Gmail, SMTP)
EMAIL_PASSWORD=<your_email_password>  # Email account password or app-specific password
